---
import LInikButton from './LInikButton.astro';

export interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none dark:text-gray-500 text-blue-200"
  >{date}</time
>
<h3 class="text-lg font-semibold text-amber-200 mt-4">
  {title}
</h3>
<p
  class="mb-4 text-base font-normal text-gray-100 text-pretty dark:text-gray-400"
>
  {description}
</p>
<!-- en caso de que tuvieramos un link -->

{ 
  link && (
    <LInikButton href={link}>
    Saber mas{" "}
      <svg
        href={link}
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </LInikButton>
  )
}
